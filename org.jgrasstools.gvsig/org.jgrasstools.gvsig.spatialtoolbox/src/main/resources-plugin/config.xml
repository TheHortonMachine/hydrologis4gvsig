<?xml version="1.0" encoding="ISO-8859-1"?>
<plugin-config>
  <libraries library-dir="lib/"/>
  <depends plugin-name="org.jgrasstools.gvsig.base"/>
  <resourceBundle name="text"/>
<extensions>
		<extension
			class-name="org.jgrasstools.gvsig.spatialtoolbox.SpatialtoolboxExtension"
			description="" active="true" priority="1">

			<action name="run-spatial-toolbox" 
				label="JGT Spatial Toolbox"
				tooltip="Open the Spatial Toolbox"  
				action-command="run-spatial-toolbox"
				icon="blocks" 
				position="001007000000"
				accelerator="" />

			<menu text="JGTools/Spatial Toolbox" 
					name="run-spatial-toolbox" />

		</extension>
		<extension
			class-name="org.jgrasstools.gvsig.spatialtoolbox.RasterStyleExtension"
			description="" active="true" priority="1">

			<action name="style-singleband-raster" 
				label="Raster Styler"
				tooltip="Simple Single Band Raster Styler" 
				action-command="style-singleband-raster"
				icon="raster_icon" 
				position="001009000000"
				accelerator="" />

			<menu text="JGTools/Tools/Raster Styler" 
					name="style-singleband-raster" />

		</extension>
		<extension
			class-name="org.jgrasstools.gvsig.spatialtoolbox.RasterValuesCopyExtension"
			description="" active="true" priority="2">

			<action name="copy-raster-values" 
				label="Raster Values Copy"
				icon="copy" 
				tooltip="Copies the current visible values of the selected raster" 
				action-command="copy-raster-values"
				position="001008000000"
				accelerator="" />

		</extension>
	</extensions>
</plugin-config>


