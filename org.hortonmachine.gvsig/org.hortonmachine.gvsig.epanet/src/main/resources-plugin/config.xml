		<extension
			class-name="org.hortonmachine.gvsig.epanet.ViewEpanetResultsExtension"
			description="" active="true" priority="1">

			<action name="view-epanet-results" 
				label="View Epanet Results"
				tooltip="View the results of an Epanet simulation" 
				action-command="view-epanet-results"
				icon="result" 
				position="001009000004"
				accelerator="" />

