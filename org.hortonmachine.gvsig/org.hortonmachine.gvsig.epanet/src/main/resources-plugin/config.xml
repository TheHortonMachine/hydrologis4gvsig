			class-name="org.hortonmachine.gvsig.epanet.StyleLayersExtension"
			description="" active="true" priority="1">

			<action name="style-epanet-shpfiles" 
				label="Style Layers"
				tooltip="Style Epanet Layers" 
				action-command="style-epanet-shpfiles"
				icon="style_shps" 
				position="001009000005"
				accelerator="" />

