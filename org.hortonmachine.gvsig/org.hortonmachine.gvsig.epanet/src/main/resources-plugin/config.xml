				label="Run Epanet"
				tooltip="Run Epanet on the current view" 
				action-command="run-epanet"
				icon="run_epanet" 
				position="001009000002"
				accelerator="" />

			<menu text="HMachine/Epanet/Run Epanet" 
					name="run-epanet" />

<!-- 			<tool-bar name="Epanet" position="10002">
