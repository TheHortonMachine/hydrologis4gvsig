	</build>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.hortonmachine</groupId>
				<artifactId>org.hortonmachine.gvsig.base</artifactId>
				<version>0.3.0</version>
			</dependency>
            <dependency>
                <groupId>org.gvsig</groupId>
                <artifactId>org.gvsig.view3d.lib.api</artifactId>
				<version>1.0.23</version>
            </dependency>
            <dependency>
                <groupId>org.gvsig</groupId>
                <artifactId>org.gvsig.view3d.swing.api</artifactId>
				<version>1.0.23</version>
            </dependency>
			<dependency>
				<groupId>org.gvsig</groupId>
				<artifactId>org.gvsig.projection.jcrs.lib</artifactId>
				<version>${org.gvsig.projection.jcrs.lib.version}</version>
                                <type>pom</type>
                                <scope>import</scope>
			</dependency>
			<dependency>
                                <groupId>org.gvsig</groupId>
                                <artifactId>org.gvsig.raster</artifactId>
                                <version>${org.gvsig.raster.version}</version>
                                <type>pom</type>
                                <scope>import</scope>
                        </dependency>
			<dependency>
                                <groupId>jfree</groupId>
                                <artifactId>jfreechart</artifactId>
                                <version>1.0.13</version>
                                <type>pom</type>
                                <scope>import</scope>
                        </dependency>
		</dependencies>
	</dependencyManagement>
	<modules>
		<module>org.hortonmachine.gvsig.base</module>
		<module>org.hortonmachine.gvsig.epanet</module>
		<module>org.hortonmachine.gvsig.geopaparazzi</module>
		<module>org.hortonmachine.gvsig.spatialtoolbox</module>
		<module>org.hortonmachine.gvsig.simpletools</module>
	</modules>
</project>
